<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BlazorWithIdentity</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <AuthorizeView Roles="SystemAdministrator">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="admin">
                    <span class="oi oi-list-rich" aria-hidden="true"></span>Administrator
                </NavLink>
            </li>
        </AuthorizeView>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="aspnet">
                <span class="oi oi-list-rich" aria-hidden="true"></span>ASP.NET
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="aspnetcore">
                <span class="oi oi-list-rich" aria-hidden="true"></span>ASP.NET CORE
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="java">
                <span class="oi oi-list-rich" aria-hidden="true"></span>JAVA
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="javascript">
                <span class="oi oi-list-rich" aria-hidden="true"></span>JavaScript
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="reactjs">
                <span class="oi oi-list-rich" aria-hidden="true"></span>React.js
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="python">
                <span class="oi oi-list-rich" aria-hidden="true"></span>Python
            </NavLink>
        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
